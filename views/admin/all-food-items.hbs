<div id="main">
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>ALL Food Item Details</h3>
                </div>
            </div>
        </div>
        <section class="section">
            <div class="card">
                <div class="card-header">
                    <!--write some eding here -->
                </div>
                <div class="card-body">
                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th colspan="2">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each items}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>{{this.category}}</td>
                                <td>{{this.description}}</td>
                                <td><img src="/images/{{this._id}}.jpg" alt="" style="width: 70px;heiht:70px"></td>
                                <td>
                                    <a href="/admin/edit-food-item/{{this._id}}" class=" btn btn-primary">Edit</a>
                                </td>
                                <td>
                                    <a href="/admin/delete-food-item/{{this._id}}" class=" btn btn-danger" onclick="deletefooditem(event)">Delete</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>

        </section>
    </div>
</div>