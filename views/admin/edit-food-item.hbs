<script>
    function viewImg(event) {
        document.getElementById("imgView").src =
        URL.createObjectURL(event.target.files[0]);
    }
</script>

<div id="main">
    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add Food Item Details</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <form method="POST" enctype="multipart/form-data"
                                action="/admin/edit-food-item/{{item._id}}">
                                <div class="row">
                                    <div class="form-group">
                                        <label for="">Food Item Name</label>
                                        <input type="text" class="form-control" id="" name="name"
                                            value="{{item.name}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">category</label>
                                        <select class="form-control" name="category" id="">
                                            <option value="{{item.category}}">{{item.category}}
                                            </option>
                                            {{#each allCategory}}
                                                <option value="{{this.categoryName}}">{{this.categoryName}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="">Description</label>
                                        <input type="text" class="form-control" id="" name="description"
                                            value="{{item.description}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Price</label>
                                        <input type="number" class="form-control" id="" name="price"
                                            value="{{item.price}}" />
                                    </div>
                                    
                                    <div>
                                        <img src="/images/{{item._id}}.jpg" style="width: 200px;height: 200px;"
                                            alt="" id="imgView" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Image</label>
                                        <input type="file" class="form-control-file" id="" name="image"
                                            onchange="viewImg(event)" />
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>