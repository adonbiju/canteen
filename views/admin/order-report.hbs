<div id="main">
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Order Report</h3>
                </div>
            </div>
        </div>
        <div class="page-title">

            <form action="/admin/order-report" method="post">
                <div class="row">
                    <div class="col-6 mb-5 ">
                        <label for="">Start Date</label>
                        <input type="date" class="form-control" id="" name="StartDate">
                    </div>
                    <div class="col-6">
                        <label for="i">End Date</label>
                        <input type="date" class="form-control" id="" name="EndDate">
                    </div>
                    <div class="text-center col-12   mb-5">
                        <button id="prosub" type="submit" class="btn btn-primary">Report</button>
                    </div>



                </div>
            </form>
        </div>
        {{#if orders}}
        <section class="section">
            <div class="card">
                <div class="card-header">
                    <!--write some eding here -->
                </div>
                <div class="card-body">
                    <table class="table" id="table2">
                        <thead>
                            <tr>
                                 <th>Date</th>
                                <th>Customer Name</th>
                                <th>Mobile No</th>
                                <th>Total Amount</th>
                                <th>Method</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                            <tr>
                                 <td>{{this.date}}</td>
                                <td>{{this.deliveryDetails.name}}</td>
                                <td>{{this.deliveryDetails.mobile1}}</td>
                                <td>{{this.totalAmount}}</td>
                                <td>{{this.paymentMethod}}</td>
                                <th>{{this.status}}</th>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>

        </section>
        {{/if}}
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#table2').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>
