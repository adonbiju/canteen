<div class="container">
        <!-- HERO SECTION-->
        <section class="py-5 bg-light">
          <div class="container">
            <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
              <div class="col-lg-6">
                <h1 class="h2 text-uppercase mb-0">Password Settings</h1>
              </div>
              <div class="col-lg-6 text-lg-right">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb justify-content-lg-end mb-0 px-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/edit-profile">Profile Settings</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Change Password</li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </section>
        <section class="py-5">
          <!-- BILLING ADDRESS-->
          <h2 class="h5 text-uppercase mb-4">Enter your details</h2>
             <form method="POST" enctype="multipart/form-data" action="/change-password/{{user_login._id}}">
          <div class="row">
            <div class="col-lg-6">
                <div class="row">
                  <div class="col-lg-12 form-group">
                    <label class="text-small text-uppercase" for="" >Old Password</label>
                    <input class="form-control form-control-lg" id="" type="password" name="oldpassword" placeholder="Enter your current password" required> 
                  </div>
                <br>
                  <div class="col-lg-12 form-group">
                    <label class="text-small text-uppercase" for="" >New Password</label>
                    <input class="form-control form-control-lg" id="" type="password" name="newpassword" placeholder="Enter your new password"required>
                  </div>
                   {{#if message}}
                   <div class="col-lg-12 form-group">
                    <label class="text-small text-danger" for="" >{{message}}</label>
                  </div>
                   {{/if}}
                  <div class="col-lg-12 form-group">
                    <button class="btn btn-dark" type="submit">Update Password</button>
                  </div>
                </div>
            </div>
          </div>
          </form>
        </section>
      </div>