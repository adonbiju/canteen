<div class="container">
  <!-- HERO SECTION-->
  <section class="py-5 bg-light">
    <div class="container">
      <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
        <div class="col-lg-6">
          <h1 class="h2 text-uppercase mb-0">Checkout</h1>
        </div>
        <div class="col-lg-6 text-lg-right">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-lg-end mb-0 px-0">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/cart">Cart</a></li>
              <li class="breadcrumb-item active" aria-current="page">Checkout</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </section>

  {{#if address }}
  <section class="py-4">
    <div class="container">
      <h2 class="h5 text-uppercase mb-4">Choose your address</h2>
      <div class="row">
        {{#each address}}
        <div class="col-lg-3 d-flex">

          <div class="card" style="margin-top: 10px;">
            <label class="p-3 text-small text-uppercase">
              {{this.useraddress.name}}<br>
              {{this.useraddress.email}}<br>
              {{this.useraddress.mobile1}}<br>
              {{this.useraddress.mobile2}}
            </label>
            <button class="btn btn-dark" onclick="addAddress('{{this.useraddress.name}}','{{this.useraddress.email}}',' {{this.useraddress.mobile1}}',' {{this.useraddress.mobile2}}',)">Use this </button>
          </div>
        </div>
        {{/each}}
      </div>

    </div>
  </section>
  {{/if}}

  <section class="py-5">
    <!-- BILLING ADDRESS-->
    <h2 class="h5 text-uppercase mb-4">Billing details</h2>
    <form action="" id="checkout-form">
      <div class="row">
        <div class="col-lg-8">
          <div class="row">
            <div class="col-lg-6 form-group">
              <label class="text-small text-uppercase" for="">Full Name</label>
              <input class="form-control form-control-lg" id="name" type="text" name="name"
                placeholder="Enter your full name" required>
              <input type="text" name="userId" value="{{user_login._id}}" hidden>
            </div>
            <div class="col-lg-6 form-group">
              <label class="text-small text-uppercase" for="">Phone Number</label>
              <input class="form-control form-control-lg" id="mobile1" type="tel" name="mobile1"
                placeholder="Enter your phone number" required>
            </div>
            <div class="col-lg-6 form-group">
              <label class="text-small text-uppercase" for="">Alternate Phone Number</label>
              <input class="form-control form-control-lg" id="mobile2" type="tel" name="mobile2"
                placeholder="Enter your alternate mobile number">
            </div>
            <div class="col-lg-6 form-group">
              <label class="text-small text-uppercase" for="">Email</label>
              <input class="form-control form-control-lg" id="email" type="email" name="email"
                placeholder="Enter your email" required>
            </div>

            
            <div class="col-lg-12 form-group">
              <input id="cbox" style="width: 15px;height: 15px;" name="save" type="checkbox">&nbsp;
              <label>Save this address for next time</label>
            </div>
            <div class="col-lg-12 form-group">
              <button class="btn btn-dark" type="submit">Place order</button>
            </div>
          </div>
        </div>
        <!-- ORDER SUMMARY-->
        <div class="col-lg-4">
          <div class="card border-0 rounded-0 p-lg-4 bg-light">
            <div class="card-body">
              <h5 class="text-uppercase mb-4">Your order</h5>
              <ul class="list-unstyled mb-0">
                <li class="d-flex align-items-center justify-content-between"><strong
                    class="small font-weight-bold">Payment Method</strong></li>

                <br>
                <li class="d-flex align-items-center justify-content-between">
                  <strong class="small font-weight-bold">
                    <div class="custom-control custom-radio">
                      <input type="radio" class="custom-control-input" id="defaultUnchecked" name="payment-method"
                        value="cod">
                      <label class="custom-control-label" for="defaultUnchecked">Cash on Delivery</label>
                    </div>
                  </strong>
                </li>
                <li class="d-flex align-items-center justify-content-between">
                  <strong class="small font-weight-bold">
                    <div class="custom-control custom-radio">
                      <input type="radio" class="custom-control-input" id="defaultChecked" name="payment-method"
                        value="online" checked>
                      <label class="custom-control-label" for="defaultChecked">Online</label>
                    </div>
                  </strong>
                </li>
                <br>
                <li class="border-bottom my-2"></li>
                <li class="d-flex align-items-center justify-content-between"><strong
                    class="text-uppercase small font-weight-bold">Total</strong><span
                    id="totalamount123">â‚¹{{total}}</span></li>
             </ul>
            </div>
          </div>
        </div>
      </div>
    </form>
  </section>
</div>



<script>
  function addAddress(name, email, mobile1, mobile2) {
    document.getElementById("name").value = name
    document.getElementById("mobile1").value = mobile1
    document.getElementById("mobile2").value = mobile2
    document.getElementById("email").value = email
  }
</script>


<script>
  $("#checkout-form").submit((e) => {
    e.preventDefault();
    $.ajax({
      url: '/place-order',
      method: 'post',
      data: $('#checkout-form').serialize(),
      success: (response) => {
        if (response.codstatus) {

          location.href = "/order-placed-sucessfully"
        } else {
          razorpayPayment(response)
          //console.log(response)


        }
      }
    })
  })

  function razorpayPayment(order) {
    var options = {
      "key": "rzp_test_6igfyhlL3sx93x", // Enter the Key ID generated from the Dashboard
      "amount": order.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
      "currency": "INR",
      "name": "Adon's World",
      "description": "Test Transaction",
      "image": "https://example.com/your_logo",
      "order_id": order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
      "handler": function (response) {
        //alert(response.razorpay_payment_id);
        //alert(response.razorpay_order_id);
        //alert(response.razorpay_signature)

        verifyPayment(response, order)
      },
      "prefill": {
        "name": "Adon Biju",
        "email": "adon@example.com",
        "contact": "9999999999"
      },
      "notes": {
        "address": "Razorpay Corporate Office"
      },
      "theme": {
        "color": "#3399cc"
      }
    };
    var rzp1 = new Razorpay(options);
    rzp1.open();

  }


  function verifyPayment(payment, order) {
    $.ajax({
      url: '/verify-payment',
      data: {
        payment,
        order
      },
      method: 'post',
      success: (response) => {
        if (response.status) {
          location.href = "/order-placed-sucessfully"
        } else {
          alert("payment failed!!!!")
        }
      }
    })
  }

</script>



