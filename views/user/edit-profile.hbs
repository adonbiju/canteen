 <script>
    function viewImg(event) {
        document.getElementById("imgView").src = URL.createObjectURL(event.target.files[0]);

    }
</script>
 
 
 <div class="container">
        <!-- HERO SECTION-->
        <section class="py-5 bg-light">
          <div class="container">
            <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
              <div class="col-lg-6">
                <h1 class="h2 text-uppercase mb-0">Profile Settings</h1>
              </div>
              <div class="col-lg-6 text-lg-right">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb justify-content-lg-end mb-0 px-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/change-password">Change Password</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Profile Settings</li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </section>
        <section class="py-5">
          <!-- BILLING ADDRESS-->
          <h2 class="h5 text-uppercase mb-4">Enter your details</h2>
          <form method="POST" enctype="multipart/form-data" action="/edit-profile/{{user_login._id}}">
          <div class="row">
            <div class="col-lg-8">
                <div class="row">
                  <div class="col-lg-6 form-group">
                    <label class="text-small text-uppercase" for="" >Full Name</label>
                    <input class="form-control form-control-lg" id="" type="text"name="name" placeholder="Enter your full name" value="{{profileDetails.name}}" required> 
                    <input type="text" name="userId" value="{{user_login._id}}" hidden> 
                  </div>
                  <div class="col-lg-6 form-group">
                    <label class="text-small text-uppercase" for="">Phone Number</label>
                    <input class="form-control form-control-lg" id="" type="tel" name="mobile1"placeholder="Enter your phone number" value="{{profileDetails.mobile1}}" required>
                  </div>
                  <div class="col-lg-6 form-group">
                    <label class="text-small text-uppercase" for="">Alternate Phone Number</label>
                    <input class="form-control form-control-lg" id="" type="tel" name="mobile2" placeholder="Enter your alternate mobile number" value="{{profileDetails.mobile2}}">
                  </div>
                  <div class="col-lg-6 form-group">
                    <label class="text-small text-uppercase" for="">Email</label>
                    <input class="form-control form-control-lg" id="" type="email"name="email" placeholder="Enter your email" value="{{profileDetails.email}}"required>
                  </div>
                  <div class="col-lg-6 form-group">
                    <label class="text-small text-uppercase" for="company">Pincode</label>
                    <input class="form-control form-control-lg" id="" type="text" name="pincode" placeholder="Enter your pincode" value="{{profileDetails.pincode}}" required>
                  </div>
                   <div class="col-lg-6 form-group">
                    <label class="text-small text-uppercase" for="company">Country</label>
                    <input class="form-control form-control-lg" id="" type="text" name="country" placeholder="Country" value="{{profileDetails.country}}"required>
                  </div>
                  <div class="col-lg-6 form-group">
                    <label class="text-small text-uppercase" for="city">City</label>
                    <input class="form-control form-control-lg" id="" type="text" name="city" value="{{profileDetails.city}}"required>
                  </div>
                  <div class="col-lg-6 form-group">
                    <label class="text-small text-uppercase" for="state" value="{{profileDetails.state}}">State</label>
                    <input class="form-control form-control-lg" id="" type="text" name="state"  value="{{profileDetails.state}}"required>
                  </div>
                  <div class="col-lg-12 form-group">
                    <button class="btn btn-dark" type="submit" onclick="updateProfile(event)">Update Profile</button>
                  </div>
                </div>
            </div>
            <!-- ORDER SUMMARY-->
            <div class="col-lg-4">
              <div class="card border-0 rounded-0 p-lg-4 bg-light">
                <div class="card-body">
                  <h5 class="text-uppercase mb-4">Upload Profile</h5>
                  <ul class="list-unstyled mb-0">
                     <li class="d-flex align-items-center justify-content-between">
                      <img  class="rounded-4"src="/profile/{{profileDetails._id}}.jpg" style="width: 200px;height: 200px;" alt="" id="imgView">
                    </li><br>
                    <li class="d-flex align-items-center justify-content-between">
                      <input type="file" class="form-control-file" id="" name="image" onchange="viewImg(event)">
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          </form>
        </section>
      </div>